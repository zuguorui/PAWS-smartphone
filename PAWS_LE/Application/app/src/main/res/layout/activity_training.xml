<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bashima.cs.unc.seus.activity.TrainingActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Train Detection CSV"
        android:id="@+id/bt_train_csv"
        android:layout_above="@+id/bt_train"
        android:layout_alignRight="@+id/bt_train"
        android:layout_alignEnd="@+id/bt_train"
        android:layout_alignParentLeft="true"
        android:textColor="#000080"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trainDet"
        android:id="@+id/bt_train"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:textColor="#000080"
        android:textStyle="bold"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Features"
        android:id="@+id/bt_calculate_feature"
        android:layout_above="@+id/bt_train_csv"
        android:layout_alignRight="@+id/bt_train_csv"
        android:layout_alignEnd="@+id/bt_train_csv"
        android:layout_alignParentLeft="true"
        android:textColor="#000080"
        android:textStyle="bold"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/trainDir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_train"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:textColor="#000080"
        android:textStyle="bold"
        android:id="@+id/bt_train_dir"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Convert Features to Readable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_train_dir"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:textColor="#000080"
        android:textStyle="bold"
        android:id="@+id/bt_convert"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Test Detection Classifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_convert"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:textColor="#000080"
        android:textStyle="bold"
        android:id="@+id/bt_test"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Test Direction Classifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_test"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:textColor="#000080"
        android:textStyle="bold"
        android:id="@+id/bt_dir_test"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:textColor="#000080"
        android:id="@+id/tv_status"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />
</RelativeLayout>
